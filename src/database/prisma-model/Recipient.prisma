import { User } from "User"

enum OrganizationType {
    ORPHANAGE
    HOMELESS_SHELTER
    COMMUNITY_KITCHEN
    FAMILY_IN_NEED
    ANIMAL_SHELTER
}

model Recipient {
    id             Int              @id @default(autoincrement())
    logo           String
    name           String
    type           OrganizationType
    pictures       String[]
    amountOfPeople Int
    bio            String
    userId         Int
    user           User             @relation(fields: [userId], references: [id])
}
